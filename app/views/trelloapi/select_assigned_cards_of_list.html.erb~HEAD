<div class="container" data-controller="trelloapi"> 
  <%= form_tag({controller: "trelloapi", action: "import_assigned_cards"}, method: "post") do %>
    <ul>
      <% @lists.each do |list| %>
          <li>
            <%= check_box_tag list.values_at("id"), list.values_at("name"),nil,:name => list.values_at("name"), "data-target"=>"trelloapi.select_assigned_cards",class:"select_list" %>
            <%= list.values_at("name").join %>
          </li>
      <% end %>
    </ul>
    <%= @assigned_cards%>
    <%= submit_tag "Submit" %>
  <% end %>
</div>