<h1>任務列表</h1>
<%= link_to "新增", new_task_path %>




<ul>
    <% @tasks.each do |task| %>
        <div>
            <%= link_to task.task_name, task_path(task.id) %>
            <%= link_to '編輯', edit_task_path(task.id) %>
            <%= 
                link_to '刪除', 
                task_path(task.id),
                method:'delete',
                data: {confirm: '真的要刪除喵?'} 
            %>
        </div>
    <% end %>   
</ul>   